@using Sztek.Models
@model IEnumerable<Sztek.Models.toplistModel>
@{
    
    ViewBag.Title = "Toplista";
}

<h2>Toplista</h2>
<article>
    @if (Model.Any())
    {


        <p>
            Az eddig lejátszott játékok alapján az alábbi toplista állt fel:
        </p>

        <table>
            <tr>
                <th>@Html.DisplayNameFor(x => x.First().Place)</th>
                <th>@Html.DisplayNameFor(x => x.First().Name)</th>
                <th>@Html.DisplayNameFor(x => x.First().Country)</th>
                <th style="text-align: right">@Html.DisplayNameFor(x => x.First().Score)</th>
            </tr>
        @foreach (var model in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => model.Place).</td>
                <td>@Html.ActionLink( model.Name,"Details","Account", new {id = model.Id},new{})</td>
                <td>@Html.DisplayFor(x => model.Country)</td>
                <td style="text-align: right">@Html.DisplayFor(x => model.Score)</td>
            </tr>
        }
        </table>
    }
</article>